{
  "name": "cap-mini-bookshop",
  "version": "1.0.0",
  "private": true,
  "description": "Minimal SAP CAP (Node.js) bookshop service with CRUD, actions, and SQLite.",
  "scripts": {
    "start": "cds-serve",
    "watch": "cds watch",
    "deploy": "cds deploy --to sqlite:db/my.db"
  },
  "dependencies": {
    "@cap-js/postgres": "^1.14.2",
    "@sap/cds": "^7",
    "express": "^4",
    "pg": "^8.16.3",
    "sqlite3": "^5"
  },
  "devDependencies": {
    "@sap/cds-dk": "^7"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "db/my.db"
        }
      }
    }
  }
}
